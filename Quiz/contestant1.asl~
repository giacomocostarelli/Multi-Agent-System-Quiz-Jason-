// Agent agente_uno in project saluti.mas2j

/* Initial beliefs and rules */
interlocutor(contestant2).
answer(E).
answer(F).
answer(G).
answer(H).
answer(I).

/* Initial goals */
!introduce_my_self.

/* Plans */
+!introduce_my_self : .my_name(Me) <- 
	.print("Buongiorno sono ", 
		Me, " e sono pronto a giocare!");
	!saluto.

+!saluto : interlocutor(Other) <- 
	Msg = "Buongiorno, come sta?";
	.send(Other, tell, saluti(Msg));
	.print("Inviato a: ", Other, " il messaggio: ", Msg).
	
+contro_saluti(Msg)[source(Other)] : interlocutor(Other) <-
	.print("Ricevuto da: ", Other, " il messaggio: ", Msg);
	!risposta_finale(Other).
	
+!risposta_finale(Other) : interlocutor(Other) <-
	Msg = "Bene, grazie.";
	.send(Other, tell, risposta_finale(Msg));
	.print("Inviato a: ", Other, " il messaggio: ", Msg).
