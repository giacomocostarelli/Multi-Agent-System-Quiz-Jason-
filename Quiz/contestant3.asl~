/* Initial beliefs and rules */
interlocutor(quizmaster).
answer(A).
answer(B).
answer(C).
answer(D).
answer(E).
step(1).

/* Initial goals */
!introduce_my_self.

/* Plans */
+!introduce_my_self : .my_name(Me) <- 
	.print("Buongiorno sono ", 
		Me, " e sono pronto a giocare!").

+question(Msg)[source(Other)] : interlocutor(Other) <-
	.print("Ricevuto da: ", Other, " la domanda: ", Msg);
	!answer(Other).
	
+!answer(Other) : interlocutor(Other)  <-
	.findall(Var,Literal,List).
	Msg = "";
	.send(Other, tell, contro_saluti(Msg));
	.print("Inviato a: ", Other, " il messaggio: ", Msg);
	-step(2); +step(3).

